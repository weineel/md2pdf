  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "name": "convert 指定目录以及文件",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "convert",
        "--no-skip-exist",
        "-s test-files",
        "-d test-files-pdf",
        "02_02.md",
        "01_01.md",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/test-files",
      "name": "convert 指定文件",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "convert",
        "--no-skip-exist",
        "02_02.md",
        "01_01.md",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/test-files",
      "name": "convert no-compression",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "convert",
        "--no-skip-exist",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/test-files",
      "name": "convert compression",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "convert",
        "--no-skip-exist",
        "--compression",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/test-files",
      "name": "convert 跳过已经转换过（存在）的文件",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "convert",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/test-files",
      "name": "concat",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "concat",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/test-files",
      "name": "concat no-compression",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        "concat",
        "--no-compression",
      ]
    },
  ]
}